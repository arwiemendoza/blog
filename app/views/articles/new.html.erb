<div class ="d-flex flex-column align-items-center justify-content-center wrapper">
    <%= form_with model: @article, local: true do |f| %>

    <p>
        <% if @article.errors.any? %>
            <ul>
                <% @article.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>

        <% end %>

    </p>

    <p>
        <h5><%= f.label "Article Name" %></h5><br/>
        <%= f.text_field :name %>
    </p>

    <p>
        <h5><%= f.label :body %></h5><br/>
        <%= f.text_field :body %>
    </p>

    <div class="d-flex align-items-center justify-content-between wrapper-3">
        <p>
            <%= f.submit %>
        </p>

        <% end %>
        <%= link_to 'Back', articles_path, class: 'backBtn' %>
    </div>
</div>
