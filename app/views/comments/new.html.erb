<div class ="d-flex flex-column align-items-center justify-content-center wrapper">
    <%= form_with model: [@article, @comment], local: true do |f| %>
        <p>
            <% if @comment.errors.any? %>
                <ul>
                    <% @comment.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>

                </ul>

            <% end %>
        </p>

        <p>
            <h4><%= f.label 'New Comment' %></h4><br/>
            <%= f.text_field :body %>
        </p>
        <p>
            <%= f.submit %>
        </p>

    <% end %>

    <%= link_to 'Back', article_path(@article)%>
</div>